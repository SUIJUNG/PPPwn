#!/bin/bash
sudo apt update -y
sudo apt install python3-scapy -y
sudo chmod +x /root/PPPwn/pppwn
sudo sed -i 's^"exit 0"^"exit"^g' /etc/rc.local
sudo sed -i 's^sudo bash /root/PPPwn/run.sh \&^^g' /etc/rc.local
sudo sed -i 's^exit 0^sudo bash /root/PPPwn/run.sh \&\n\nexit 0^g' /etc/rc.local
echo "*******************************************"
echo -e '\033[36mInstall complete,\033[33m Rebooting\033[0m'
echo "*******************************************"
sleep 5
shutdown now
